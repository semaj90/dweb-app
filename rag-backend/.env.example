# Enhanced RAG Backend Environment Configuration

# Server Configuration
PORT=8000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info

# Database Configuration (PostgreSQL + pgvector)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deeds_web_db
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/deeds_web_db

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:9b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,docx,doc,txt,html,htm,jpg,jpeg,png,tiff,bmp

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_DIR=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Vector Search Configuration
VECTOR_DIMENSIONS=384
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=50

# Agent Configuration
AGENT_TIMEOUT=60000
MAX_AGENTS_CONCURRENT=5
AGENT_CACHE_TTL=3600

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
COMPONENT_TIMEOUT=5000

# Production Optimizations
CLUSTER_WORKERS=auto
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true
ENABLE_HELMET=true

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
TRACE_REQUESTS=false

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=true