# Environment Variables Example
# Copy this file to .env and update with your values

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=legal-documents
MINIO_USE_SSL=false

# PostgreSQL Configuration with pgvector
DATABASE_URL=postgresql://legal_admin:LegalAI2024!@localhost:5432/legal_ai_db
PG_CONN_STRING=postgresql://legal_admin:LegalAI2024!@localhost:5432/legal_ai_db

# Vector Database Configuration
DATABASE_URL=postgresql://legal_admin:123456@localhost:5432/legal_ai_db
PG_CONN_STRING=postgresql://legal_admin:123456@localhost:5432/legal_ai_db
VECTOR_TABLE=document_metadata
ID_COLUMN=id
TEXT_COLUMN=extracted_text
VECTOR_COLUMN=embedding
# pgvector distance metric: cosine | l2 | ip
DISTANCE_METRIC=cosine

# Redis Configuration (used by caches)
REDIS_URL=redis://localhost:6379
REDIS_ADDR=localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434
EMBED_MODEL=nomic-embed-text
# Neo4j (optional graph enrichment)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=pass
# Embedding cache TTL (e.g., 10m, 1h)
EMBED_CACHE_TTL=10m

# Service Ports
RAG_QUIC_PORT=8092
RAG_HTTP_PORT=8093
UPLOAD_SERVICE_PORT=8094
UPLOAD_SERVICE_URL=http://localhost:8094
RAG_QUIC_FRONT_PORT=8443
RAG_QUIC_FALLBACK_PORT=8444
RAG_QUIC_ENABLE_FALLBACK=true
RAG_BACKEND_URL=http://localhost:8093
QUIC_EDGE_CACHE_TTL=30s
QUIC_EDGE_CACHE_MAX=500
QUIC_EDGE_CACHE_MAX_BYTES=1048576

# SvelteKit Configuration
NODE_ENV=development
PORT=5173
HOST=localhost
VITE_UPLOAD_SERVICE_URL=http://localhost:8094
VITE_RAG_SERVICE_URL=http://localhost:8093

# Security
JWT_SECRET=generate-a-secure-random-string-here
SESSION_SECRET=generate-another-secure-random-string-here

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,tiff

# AI Processing Options
ENABLE_TEXT_EXTRACTION=true
ENABLE_EMBEDDINGS=true
ENABLE_SUMMARY_GENERATION=true
ENABLE_ENTITY_EXTRACTION=false
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_DOCUMENT_CLASSIFICATION=false

# Feature Flags
ENABLE_GPU_ACCELERATION=true
ENABLE_RAG=true
ENABLE_STREAMING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
MAX_WORKERS=4
CACHE_TTL=300

# Paths
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
LOGS_DIR=./logs