# =============================================================================
# Legal AI System Environment Configuration
# SvelteKit 2 + Melt UI + Streaming + LangChain + CrewAI + Ollama/Claude/Gemini
# =============================================================================

# =============================================================================
# Database Configuration (PostgreSQL + pgvector + Drizzle ORM)
# =============================================================================
DATABASE_URL=postgresql://legalai:password@localhost:5432/legalai_db
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30000
POSTGRES_USER=legalai
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=legalai_db
POSTGRES_PORT=5432
ENABLE_PGVECTOR=true

# =============================================================================
# Redis Configuration (SIMD-parsed LRU Cache)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600
ENABLE_SIMD_CACHE=true
REDIS_CLUSTER_NODES=
SESSION_TTL=86400

# =============================================================================
# Qdrant Vector Database
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
VECTOR_DIMENSIONS=384
DEFAULT_COLLECTION=legal_documents
QDRANT_COLLECTION_NAME=legal_documents
ENABLE_VECTOR_SEARCH=true

# =============================================================================
# LLM Configuration (Ollama + Claude/Gemini Fallback)
# =============================================================================
# Ollama Local LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma3-legal
OLLAMA_LEGAL_MODEL=gemma2:9b
EMBEDDING_MODEL=nomic-embed-text
LLM_MODEL=gemma3-legal
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=2048

# Claude API Fallback
ANTHROPIC_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Gemini API Fallback
GOOGLE_AI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# =============================================================================
# Agent Orchestration (LangChain + CrewAI)
# =============================================================================
# CrewAI Configuration
CREWAI_API_KEY=
OPENAI_API_KEY=

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=legal-ai-system

# =============================================================================
# Go GPU Server Configuration
# =============================================================================
GO_SERVER_URL=http://localhost:8081
GO_SERVER_PORT=8081
ENABLE_GO_GPU_SERVER=true

# =============================================================================
# Node.js Clustering + Worker Threads
# =============================================================================
CLUSTER_WORKERS=4
ENABLE_CLUSTERING=true
MAX_MEMORY_USAGE=2048
MAX_WORKER_THREADS=8
WORKER_POOL_SIZE=4
CONCURRENT_WORKERS=4

# =============================================================================
# Knowledge Graph (Neo4j - Optional)
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=legal-ai-2024
ENABLE_KNOWLEDGE_GRAPH=true

# Application Settings
NODE_ENV=development
PORT=5173
HOST=localhost
ORIGIN=http://localhost:5173

# Security
SESSION_SECRET=your-session-secret-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
BATCH_SIZE=100
CONCURRENT_WORKERS=4

# Features (toggle features on/off)
ENABLE_OCR=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true

# External Services (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@legal-ai-system.local

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development
VITE_DEV_SERVER_PORT=5173
VITE_PREVIEW_PORT=4173
DEBUG=false
