# Legal AI System Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prosecutor_db
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
SESSION_TTL=86400

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
VECTOR_DIMENSIONS=384
DEFAULT_COLLECTION=legal_documents

# Ollama AI Service
OLLAMA_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
LLM_MODEL=gemma3-legal
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=2048

# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=legal-ai-2024

# Application Settings
NODE_ENV=development
PORT=5173
HOST=localhost
ORIGIN=http://localhost:5173

# Security
SESSION_SECRET=your-session-secret-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
BATCH_SIZE=100
CONCURRENT_WORKERS=4

# Features (toggle features on/off)
ENABLE_OCR=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true

# External Services (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@legal-ai-system.local

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development
VITE_DEV_SERVER_PORT=5173
VITE_PREVIEW_PORT=4173
DEBUG=false
