   * Queue embedding generation
   */
  async queueEmbeddingGeneration(embeddingData: EmbeddingJobData): Promise<string> {
    await this.initialize();
    if (!this.channel || !this.redis) throw new Error("Services not initialized");

    const job: JobData = {
