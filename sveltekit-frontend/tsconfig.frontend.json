{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": [
    "src/lib/**/*",
    "src/routes/**/*",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "src/server/**/*",
    "src/routes/api/**/*", 
    "node_modules",
    "**/*three*/**",
    "**/*yorha*/**",
    "**/*webgpu*/**",
    "**/*wasm*/**",
    "**/*gpu*/**",
    "**/*worker*/**",
    "../**"
  ]
}
