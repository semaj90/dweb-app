<script>
	import '../app.css';
	import Navigation from '$lib/components/Navigation.svelte';
	import GoldenRatioGrid from '$lib/components/ui/layout/GoldenRatioGrid.svelte';
	import FindModal from '$lib/components/ai/FindModal.svelte';
	
	// Global FindModal reference for Ctrl+K shortcut
	let findModal;
	
	// Global keyboard shortcut handler
	function handleKeydown(event) {
		if (event.ctrlKey && event.key === 'k') {
			event.preventDefault();
			findModal?.open();
		}
	}
</script>

<GoldenRatioGrid 
	variant="content" 
	direction="vertical" 
	size="full" 
	legal={true}
	responsive={true}
	gap="md"
	class="min-h-screen bg-background"
>
	{#snippet header()}
		<Navigation />
	{/snippet}

	{#snippet children()}
		<div class="container mx-auto py-6">
			<slot />
		</div>
	{/snippet}
</GoldenRatioGrid>

<!-- Global Find Modal - accessible via Ctrl+K -->
<FindModal bind:this={findModal} />

<!-- Global keyboard shortcuts -->
<svelte:window on:keydown={handleKeydown} />

<style>
	:global(html) {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
	}
	
	:global(body) {
		margin: 0;
		padding: 0;
		line-height: 1.6;
		overflow-x: hidden;
	}
</style>
