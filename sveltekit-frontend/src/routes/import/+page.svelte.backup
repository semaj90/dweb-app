      <!-- Example Templates -->
      <div class="mx-auto px-4 max-w-7xl">
        <h3 class="mx-auto px-4 max-w-7xl">
          <Download class="mx-auto px-4 max-w-7xl" />
          Example Templates
        </h3>

        <div class="mx-auto px-4 max-w-7xl">
          <div>
