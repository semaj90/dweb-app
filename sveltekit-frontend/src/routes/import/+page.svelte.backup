                Importing...
              {:else}
                <Upload class="mx-auto px-4 max-w-7xl" />
                Import Data
              {/if}
            </Button>
            <Tooltip content="Clear current import and start over">
              <Button variant="outline" on:click={() => clearImport()}>
                <X class="mx-auto px-4 max-w-7xl" />
                Cancel
              </Button>
            </Tooltip>
          </div>
        </div>
      {/if}
    </div>

    <!-- Sidebar -->
