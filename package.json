{
  "name": "legal-ai-system",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "db:up": "docker-compose up -d postgres redis qdrant",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f",
    "db:migrate": "cd sveltekit-frontend && npx drizzle-kit migrate",
    "db:push": "cd sveltekit-frontend && npx drizzle-kit push:pg",
    "db:studio": "cd sveltekit-frontend && npx drizzle-kit studio",
    "ai:start": "ollama serve",
    "ai:models": "ollama create gemma3-legal -f local-models/Modelfile.gemma3-legal && ollama pull nomic-embed-text",
    "dev:infra": "npm run db:up && sleep 10 && npm run db:push",
    "dev:full": "npm run dev:infra && cd sveltekit-frontend && npm run dev",
    "test": "npm run test:services && npm run test:integration",
    "test:services": "node tests/services.test.js",
    "test:integration": "node tests/integration.test.js",
    "production:start": "npm run db:up && npm run ai:models && cd sveltekit-frontend && npm run build && npm run preview",
    "setup:gpu-json": "node setup-gpu-json-parser.ts",
    "build:wasm": "cd src/lib/wasm && powershell -ExecutionPolicy Bypass -File build-wasm.ps1",
    "build:wasm:debug": "cd src/lib/wasm && powershell -ExecutionPolicy Bypass -File build-wasm.ps1 -BuildType debug",
    "test:wasm": "cd src/lib/wasm && powershell -ExecutionPolicy Bypass -File build-wasm.ps1 -RunTests",
    "benchmark:json": "node -e \"import('./src/lib/wasm/benchmark-json-parser.js').then(m => m.runBenchmark())\"",
    "optimize:docker": "node -e \"import('./src/lib/optimization/docker-resource-optimizer.js').then(m => m.optimizeResources())\"",
    "profile:wasm": "node --inspect src/lib/wasm/benchmark-json-parser.js",
    "clean:wasm": "cd src/lib/wasm && make clean",
    "install:deps": "cd src/lib/wasm && make install-deps"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "drizzle-kit": "^0.24.0",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.0",
    "@qdrant/js-client-rest": "^1.15.0",
    "redis": "^4.7.0"
  }
}
