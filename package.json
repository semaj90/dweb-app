{
  "name": "deeds-legal-ai-assistant",
  "version": "2.0.0",
  "description": "Secure legal AI assistant with pgvector, Ollama integration, and semantic search",
  "type": "module",
  "scripts": {
    "setup": "npm run deps && npm run db:migrate",
    "setup:full": "powershell -ExecutionPolicy Bypass -File ./setup-complete-with-ollama.ps1",
    "setup:quick": "quick-start.bat",
    "deps": "npm install && cd sveltekit-frontend && npm install",
    "dev": "cd sveltekit-frontend && npm run dev",
    "dev:all": "docker-compose up -d && npm run dev",
    "build": "cd sveltekit-frontend && npm run build",
    "preview": "cd sveltekit-frontend && npm run preview",
    "test": "cd sveltekit-frontend && npm run test",
    "test:e2e": "cd sveltekit-frontend && npm run test:e2e",
    "test:ai": "start http://localhost:5173/ai-test",
    "check": "cd sveltekit-frontend && npm run check",
    "check:log": "cd sveltekit-frontend && npm run check 2>&1 | tee ../logs/svelte-check-$(date +%Y%m%d-%H%M%S).log",
    "check:log:win": "cd sveltekit-frontend && npm run check > ../logs/svelte-check.log 2>&1 && type ../logs/svelte-check.log",
    "check:fix": "node fix-canvas-typescript.mjs",
    "fix:all": "node fix-all-errors.mjs",
    "fix:specific": "node fix-specific-errors.mjs",
    "fix:auto": "powershell -ExecutionPolicy Bypass -File fix-all.ps1",
    "fix:comprehensive": "cd sveltekit-frontend && npm run fix:all",
    "fix:master": "MASTER-FIX-ALL-ERRORS.bat",
    "fix:both": "cd sveltekit-frontend && npm run fix:all && cd .. && npm run fix:all",
    "validate:canvas": "node validate-canvas.mjs",
    "fix:typescript": "node fix-all-typescript-imports.mjs",
    "format": "cd sveltekit-frontend && npm run format",
    "lint": "cd sveltekit-frontend && npm run lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "docker:status": "docker ps --format \"table {{.Names}}\\t{{.Status}}\\t{{.Ports}}\"",
    "db:migrate": "cd sveltekit-frontend && npx drizzle-kit push:pg",
    "db:generate": "cd sveltekit-frontend && npx drizzle-kit generate:pg",
    "db:studio": "cd sveltekit-frontend && npx drizzle-kit studio",
    "db:reset": "docker exec prosecutor_postgres psql -U postgres -c \"DROP DATABASE IF EXISTS prosecutor_db; CREATE DATABASE prosecutor_db;\" && npm run db:migrate",
    "db:check": "docker exec prosecutor_postgres psql -U postgres -d prosecutor_db -c \"\\dt\"",
    "db:psql": "docker exec -it prosecutor_postgres psql -U postgres -d prosecutor_db",
    "ollama:models": "docker exec prosecutor_ollama ollama list",
    "ollama:pull": "docker exec prosecutor_ollama ollama pull",
    "ollama:test": "curl http://localhost:11434/api/tags",
    "seed": "tsx ./seed-enhanced.ts",
    "seed:basic": "cd sveltekit-frontend && npm run db:seed",
    "clean": "cd sveltekit-frontend && rimraf node_modules .svelte-kit build && cd .. && rimraf node_modules",
    "reset": "npm run docker:reset && npm run clean && npm run setup:full"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/fabric": "^5.3.10",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "rimraf": "^5.0.5",
    "svelte-check": "^4.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@monaco-editor/loader": "^1.5.0",
    "@tauri-apps/api": "^2.5.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "dotenv": "^16.5.0",
    "fabric": "^6.7.0",
    "glob": "^10.3.10",
    "monaco-editor": "^0.52.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.2",
    "postgres": "^3.4.4"
  }
}
