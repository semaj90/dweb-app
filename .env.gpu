# Detective Evidence Synthesizer - GPU + Local GGUF Model Configuration
DATABASE_URL="postgresql://detective:secure_password@localhost:5434/detective_evidence_db"
DIRECT_URL="postgresql://detective:secure_password@localhost:5434/detective_evidence_db"

# GPU Ollama with local GGUF model
OLLAMA_BASE_URL="http://localhost:11436"
OLLAMA_MODEL="gemma3-detective"
OLLAMA_GPU_ENABLED=true
OLLAMA_LOCAL_MODEL=true
OLLAMA_GGUF_PATH="/models/gemma3Q4_K_M/mo16.gguf"
OLLAMA_GPU_LAYERS=33
OLLAMA_FLASH_ATTENTION=true

# GPU-optimized services
QDRANT_URL="http://localhost:6335"
REDIS_URL="redis://localhost:6381"
RABBITMQ_URL="amqp://detective:secure_password@localhost:5674"

# Performance settings
VECTOR_PROCESSING_BATCH_SIZE=1000
AI_ANALYSIS_PARALLEL_WORKERS=4
CUDA_VISIBLE_DEVICES=0

# File Storage
EVIDENCE_STORAGE_PATH="./evidence_files"
MAX_FILE_SIZE="200MB"
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,gif,mp4,mp3,wav,doc,docx,txt,csv"

# Security
JWT_SECRET="detective_evidence_jwt_secret_gpu_version"
