{
  // Windows Native Development - Phase 14 Legal AI System
  "go.buildTags": "cgo",
  "go.toolsEnvVars": {
    "CC": "C:\\Progra~1\\LLVM\\bin\\clang.exe",
    "CXX": "C:\\Progra~1\\LLVM\\bin\\clang++.exe",
    "CGO_ENABLED": "1",
    "CGO_CFLAGS": "-IC:\\Progra~1\\NVIDIA~1\\CUDA\\v13.0\\include -mavx2 -mfma",
    "CGO_LDFLAGS": "-LC:\\Progra~1\\NVIDIA~1\\CUDA\\v13.0\\lib\\x64 -lcudart -lcublas",
    "CUDA_PATH": "C:\\Program Files\\NVIDIA GPU Computing Toolkit\\CUDA\\v13.0",
    "DATABASE_URL": "postgresql://legal_admin:123456@localhost:5432/legal_ai_db",
    "OLLAMA_URL": "http://localhost:11434",
    "PGPASSWORD": "123456"
  },
  "go.buildFlags": ["-tags=cgo"],
  "go.lintOnSave": "package",
  "go.formatTool": "gofmt",
  "go.useCodeSnippetsOnFunctionSuggest": true,
  "go.coverOnSave": false,
  "go.coverOnSingleTest": true,
  "go.testFlags": ["-tags=cgo"],
  "go.testTimeout": "300s",

  // Windows Native File Associations
  "files.associations": {
    "*.go": "go",
    "*.ts": "typescript",
    "*.svelte": "svelte",
    "*.sql": "sql",
    "*.env*": "dotenv"
  },

  // TypeScript Configuration for SvelteKit
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "relative",

  // SvelteKit Development
  "svelte.enable-ts-plugin": true,
  "svelte.plugin.svelte.format.enable": true,

  // Windows Native Terminal
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "path": "cmd.exe",
      "args": []
    },
    "PowerShell": {
      "path": "powershell.exe",
      "args": []
    }
  },

  // VS Code Performance & Extension Host Optimization
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "extensions.experimental.affinity": {
    "mcp-context7-assistant": 1
  },
  
  // Editor Configuration
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": null,

  // Language Specific Formatters
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

  // MCP Context7 Extension Settings
  "mcpContext7.serverPort": 4100,
  "mcpContext7.logLevel": "debug",
  "mcpContext7.maxConnections": 5,
  "mcpContext7.connectionTimeout": 30000,
  "mcpContext7.retryAttempts": 2,

  // Windows Native Development Environment
  "legal-ai.nativeWindows": true,
  "legal-ai.useLocalServices": true,
  "legal-ai.postgresLocal": "localhost:5432",
  "legal-ai.ollamaLocal": "localhost:11434",
  "terminal.integrated.suggest.enabled": true
}
